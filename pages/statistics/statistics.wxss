.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  text-align: center;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
  position: relative;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  flex: 1;
  color: white;
  margin-bottom: 10rpx;
}

.translate-btn {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.tabs {
  display: flex;
  background: white;
  border-radius: 50rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 40rpx;
  background: transparent;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab.active {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  color: white;
  font-weight: bold;
}

.content {
  padding: 10rpx;
}

.section {
  display: flex;
  flex-direction: column;
}

.card {
  padding: 40rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.total-card {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  color: white;
}

.daily-card {
  background: linear-gradient(135deg, #3B82F6 0%, #06B6D4 100%);
  color: white;
}

.yearly-card {
  background: linear-gradient(135deg, #F59E0B 0%, #EF4444 100%);
  color: white;
}

.card-title {
  font-size: 32rpx;
  display: block;
  margin-bottom: 20rpx;
  font-weight: 500;
  opacity: 0.95;
}

.big-number {
  font-size: 100rpx;
  font-weight: bold;
  display: block;
  margin: 20rpx 0;
}

.label {
  font-size: 28rpx;
  display: block;
  opacity: 0.9;
}

.info {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.info text {
  display: block;
  font-size: 24rpx;
  margin: 10rpx 0;
  opacity: 0.95;
}

.records-list {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.list-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.record-item {
  margin-bottom: 10rpx;
}

.record-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  cursor: pointer;
}

.record-main:active {
  background: #e9ecef;
}

.record-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.record-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.record-count {
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.expand-icon {
  font-size: 28rpx;
  color: #8B5CF6;
  font-weight: bold;
}

.detail-list {
  margin-top: 10rpx;
  padding-left: 20rpx;
  border-left: 4rpx solid #8B5CF6;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-date {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.detail-time {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.detail-count {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.detail-actions {
  display: flex;
  gap: 12rpx;
}

.btn-detail-edit {
  background: #3B82F6;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.btn-detail-delete {
  background: #EF4444;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s;
}

.modal-show {
  opacity: 1;
  pointer-events: auto;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.modal-body {
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.form-input[disabled] {
  background: #f5f5f5;
  color: #666;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
}

.btn-cancel {
  flex: 1;
  padding: 20rpx;
  background: #9ca3af;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn-save {
  flex: 1;
  padding: 20rpx;
  background: #8B5CF6;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
}
