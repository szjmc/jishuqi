/* 容器样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 20rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1F2937;
  display: block;
  margin-bottom: 10rpx;
}

.translate-btn {
  position: absolute;
  top: 0;
  right: 0;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: #6B7280;
}

/* 主内容区 */
.main-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

@media (min-width: 768px) {
  .main-content {
    flex-direction: row;
  }
  
  .left-section {
    flex: 2;
  }
  
  .right-section {
    flex: 1;
  }
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 25rpx rgba(139, 92, 246, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
}

/* 经文计数列表 */
.chanting-item {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #1F2937;
}

.item-actions {
  display: flex;
  gap: 16rpx;
}

.count-buttons {
  display: flex !important;
  flex-direction: column !important;
  gap: 12rpx !important;
}

.count-btn {
  border: 2rpx solid #8B5CF6 !important;
  color: #8B5CF6 !important;
  background: transparent !important;
  padding: 16rpx 24rpx !important;
  border-radius: 12rpx !important;
  font-size: 24rpx !important;
  font-weight: 500 !important;
  transition: all 0.3s !important;
  display: block !important;
}

.count-btn:active {
  background: #8B5CF6 !important;
  color: white !important;
  transform: scale(0.95);
}

.custom-input {
  position: relative;
  flex: 1;
  min-width: 200rpx;
}

.custom-input-field {
  border: 2rpx solid #E5E7EB !important;
  border-radius: 12rpx !important;
  padding: 16rpx 60rpx 16rpx 24rpx !important;
  font-size: 28rpx !important;
  width: 100% !important;
  box-sizing: border-box !important;
  height: 80rpx !important;
}

.custom-input-field:focus {
  outline: none;
  border-color: #8B5CF6 !important;
}

.custom-add-btn {
  position: absolute !important;
  right: 8rpx !important;
  top: 50% !important;
  transform: translateY(-50%);
  background: #8B5CF6 !important;
  color: white !important;
  border: none !important;
  border-radius: 8rpx !important;
  width: 50rpx !important;
  height: 50rpx !important;
  font-size: 32rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  z-index: 10 !important;
}

.custom-add-btn:active {
  background: #7C3AED;
  transform: translateY(-50%) scale(0.95);
}

/* 按钮样式 */
.btn-primary {
  background: #8B5CF6;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.btn-primary:active {
  background: #7C3AED;
  transform: scale(0.95);
}

.btn-secondary {
  background: #6B7280;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.btn-danger {
  background: #EF4444;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.btn-edit, .btn-edit-small {
  background: #3B82F6;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
}

.btn-delete, .btn-delete-small {
  background: #EF4444;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
}

.add-button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-top: 24rpx;
}

/* 汇总区域样式 */
.summary-content {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 12rpx;
  padding: 24rpx;
  min-height: 200rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #F3F4F6;
}

.summary-name {
  font-weight: 500;
}

.summary-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.summary-count {
  margin-right: 16rpx;
}

.empty-text {
  color: #6B7280;
  font-style: italic;
  text-align: center;
  display: block;
  padding: 40rpx 0;
}

/* 统计选项卡 */
.tab-container {
  display: flex;
  border-bottom: 2rpx solid #E5E7EB;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s;
}

.tab-active {
  color: #8B5CF6;
  border-bottom-color: #8B5CF6;
  font-weight: 500;
}

/* 统计内容 */
.statistics-content {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 12rpx;
  padding: 24rpx;
  min-height: 200rpx;
}

.stat-header {
  text-align: center;
  margin-bottom: 20rpx;
}

.stat-date {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
}

.stat-total {
  font-size: 48rpx;
  font-weight: bold;
  color: #8B5CF6;
  display: block;
  margin: 8rpx 0;
}

.stat-label {
  font-size: 20rpx;
  color: #6B7280;
}

.stat-list {
  margin-top: 16rpx;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.stat-count {
  font-weight: 500;
}

.empty-stat {
  color: #6B7280;
  font-style: italic;
  text-align: center;
  padding: 40rpx 0;
}

/* 底部样式 */
.footer {
  text-align: center;
  margin-top: 40rpx;
  color: #6B7280;
  font-size: 24rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.modal-show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  width: 90vw;
  max-width: 600rpx;
  transform: scale(0.9);
  opacity: 0;
  transition: all 0.3s;
}

.modal-show .modal-content {
  transform: scale(1);
  opacity: 1;
}

.modal-header {
  margin-bottom: 24rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
}

.modal-body {
  margin-bottom: 24rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.form-input {
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 24rpx;
  width: 100%;
}

.form-input:focus {
  outline: none;
  border-color: #8B5CF6;
}

.form-input:disabled {
  background: #F9FAFB;
  color: #6B7280;
}

.quick-counts {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12rpx;
}

.quick-count-input {
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  padding: 12rpx;
  font-size: 24rpx;
  text-align: center;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.btn-cancel {
  background: #6B7280;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

.btn-save {
  background: #8B5CF6;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

/* 提示信息样式 */
.toast {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  background: #10B981;
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 12rpx;
  transform: translateY(100rpx);
  opacity: 0;
  transition: all 0.3s;
  z-index: 1001;
}

.toast-show {
  transform: translateY(0);
  opacity: 1;
}

.toast-error {
  background: #EF4444;
}

.toast-success {
  background: #10B981;
}

.toast-icon {
  font-size: 24rpx;
}

.toast-message {
  font-size: 24rpx;
}

/* 响应式设计 */
@media (max-width: 480px) {
  .container {
    padding: 16rpx;
  }
  
  .card {
    padding: 24rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .main-content {
    gap: 16rpx;
  }
  
  .count-buttons {
    flex-direction: column;
  }

  .custom-input {
    min-width: 100%;
  }
}